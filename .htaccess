<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. If the request is already pointing into /public/, do nothing
    RewriteCond %{REQUEST_URI} !^/public/

    # 2. Redirect the root URL (/) to /public/
    RewriteRule ^$ public/ [L]

    # 3. Rewrite *anything else* that isnâ€™t a real file or directory
    #    into /public/<that-path>
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
